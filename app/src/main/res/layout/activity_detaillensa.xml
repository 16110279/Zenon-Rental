<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.zenonrental.DetailActivity"
    android:background="#000"
>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/zenonheader"
        android:id="@+id/linearLayout"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:background="#fff"
        android:layout_marginBottom="100dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imgL"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:scaleType="centerCrop" />


        <TextView
            android:id="@+id/tvLNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgL"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:textSize="15dp"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:id="@+id/tvLHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLNama"
            android:layout_centerHorizontal="true"
            android:inputType="number" />


        <EditText
            android:id="@+id/btnLRentD"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLHarga"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:hint="Lama sewa"
            android:inputType="number"
            android:maxLength="2" />



        <EditText
            android:id="@+id/etLBanyakItem"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnLRentD"
            android:layout_alignRight="@+id/btnLRentD"
            android:layout_below="@+id/btnLRentD"
            android:hint="Jumlah item"
            android:inputType="number"
            android:maxLength="2" />

        <Button
            android:id="@+id/btnLHitung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/etLBanyakItem"
            android:layout_alignLeft="@+id/etLBanyakItem"
            android:layout_alignRight="@+id/etLBanyakItem"
            android:layout_alignStart="@+id/etLBanyakItem"
            android:layout_below="@+id/etLBanyakItem"
            android:layout_marginTop="10dp"
            android:text="Hitung" />




        <TextView
            android:id="@+id/tvTampil"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/btnLHitung"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="" />


    </RelativeLayout>
</RelativeLayout>
